[color]
  diff = auto
  branch = auto
  status = auto
  ui = auto
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold
[user]
  name = dennyabraham
  email = dennyabraham@users.noreply.github.com
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  praise = blame
  hide = update-index --assume-unchanged
  unhide = update-index --no-assume-unchanged
  char-diff = diff --word-diff-regex=.
  char-diff-color = diff --word-diff-regex=. --word-diff=color
  count = shortlog -sn
  lol = log --graph --pretty=oneline --decorate
  amend-content = commit --amend --no-edit
  wip = commit -nam 'wip [ci skip]'
  blank = commit --allow-empty -nm '[ci skip]'
  addnw = !sh -c 'git diff -U0 -w --no-color --src-prefix=a/ --dst-prefix=b/ "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'
[fetch]
  prune = true
  fsckobjects = true
[transfer]
  fsckobjects = true
[receive]
  fsckObjects = true
[push]
  default = upstream
[pull]
  rebase = true
[rerere]
  enabled = true
  autoupdate = true
[commit]
  template = ~/.config/git/message-template
[core]
  editor = nvim
  autocrlf = input
  excludesfile = ~/.config/git/ignore
  attributesfile = ~/.config/git/attributes
  ;hooksPath # sets a hooks path
[init]
  # templatedir = ~/.config/git/template
[rebase]
  autostash = true
  autosquash = true
[branch]
  autosetuprebase = always
[homebrew]
  analyticsdisabled = true
[submodule]
  fetchJobs = 4
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[grep]
  lineNumber = true
[diff "nodiff"]
	command = /usr/bin/true
[gpg]
	program = gpg
[init]
	defaultBranch = canon
[include]
  path = ~/.config/git/arch
  path = ~/.config/git/secret-config
  path = ~/.config/git/delta # experimental
[log]
  date = iso
